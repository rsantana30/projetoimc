<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="389dp"
        android:layout_height="258dp"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/conteincomponents" />

    <EditText
        android:id="@+id/edt_altura"
        android:layout_width="354dp"
        android:layout_height="53dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:drawableRight="@drawable/ic_height"
        android:hint="Digite aqui sua altura"
        android:inputType="numberDecimal"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_calcular"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/edt_peso"
        app:layout_constraintVertical_bias="0.166" />

    <EditText
        android:id="@+id/edt_peso"
        android:layout_width="354dp"
        android:layout_height="52dp"
        android:layout_margin="25dp"
        android:background="@drawable/edit_text"
        android:drawableRight="@drawable/ic_scale"
        android:hint="Digite aqui seu peso"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btn_calcular"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_margin="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:text="Calcular"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="251dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imc2" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="419dp"
        android:text="Bem vindo! informe abaixo seus dados."
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
